extends layout

block content
  h1 Generar Quiniela
  script(src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.1.3/socket.io.js")


 
  button.btn.btn-primary(type='button', id='btn-generar-quiniela') Generar Quiniela

  div#quiniela-container

  
  script(type='text/javascript').
    const socket = io();

    
    document.getElementById('btn-generar-quiniela').addEventListener('click', () => {
      socket.emit('generarQuiniela');
    });

   
    socket.on('quinielaGenerada', (quiniela) => {
      
      const quinielaContainer = document.getElementById('quiniela-container');
      quinielaContainer.innerHTML = '<p>Quiniela generada:</p>';
      const ul = document.createElement('ul');
      ul.classList.add('list-group');
      quiniela.forEach((resultado) => {
        const li = document.createElement('li');
        li.classList.add('list-group-item');
        li.textContent = resultado;
        ul.appendChild(li);
      });
      quinielaContainer.appendChild(ul);
    });
